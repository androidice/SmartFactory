@using Microsoft.AspNetCore.Identity
@using Innexus.SmartFactory.Data.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            @Html.ActionLink("Login",
                            Innexus.SmartFactory.Web.Infrastructure.Section.Actions.LOGIN,
                            Innexus.SmartFactory.Web.Infrastructure.Section.Controllers.ACCOUNT,
                            null, new { @class= "nav-link text-dark" })
        </li>
    }
</ul>